<%- include('../shared/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../shared/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(isEditing) {%>edit-product<% }else{%>add-product<%}%>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(isEditing) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(isEditing) { %><%= product.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(isEditing) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if(isEditing) { %><%= product.description %><% } %></textarea>
            </div>
            
            <% if(isEditing) {%><input type="hidden" value="<%= product.id %>" name="id" /><% } %>

            <button class="btn" type="submit"><% if(isEditing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../shared/end.ejs') %>